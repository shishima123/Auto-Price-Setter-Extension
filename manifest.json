{
  "manifest_version": 3,
  "name": "Auto Price Setter",
  "version": "1.0",
  "description": "Tự động set giá giao dịch với phần trăm tùy chỉnh",
  "permissions": ["activeTab", "storage"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}